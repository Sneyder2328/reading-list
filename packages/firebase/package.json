{
  "name": "@reading-list/firebase",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts --format esm --watch",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "type-check": "tsc --project tsconfig.json",
    "test": "vitest run --passWithNoTests",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "firebase": "latest"
  },
  "devDependencies": {
    "tsup": "latest",
    "vitest": "latest"
  }
}
