{
  "$schema": "https://biomejs.dev/schemas/2.3.15/schema.json",
  "formatter": {
    "files": {
      "ignore": [
        "**/.turbo/**"
      ]
    },
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noUnknownAtRules": "off"
      }
    }
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } }
}
